{
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "i18nConfig.js",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],

  "exclude": ["node_modules", "dist", "**/playwright-report", "**/test-results"],

  "compilerOptions": {
    "baseUrl": ".",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "types": []
  }
}
